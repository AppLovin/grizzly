<network-config>
    <transports>
        <transport name="tcp"/>
    </transports>
    <protocols>
        <protocol name="http">
            <http comet-support-enabled="true"/>
        </protocol>
    </protocols>
    <network-listeners>
        <thread-pool name="defaultThreadPool"/>
        <network-listener name="http-listener" port="38082" transport="tcp" protocol="http" thread-pool="defaultThreadPool"/>
    </network-listeners>
</network-config>
