<network-config>
    <transports>
        <transport name="tcp"/>
    </transports>
    <protocols>
        <protocol name="https-lazy" security-enabled="true">
            <http/>
            <ssl ssl3-enabled="false" cert-nickname="s1as"
                 trust-store="target/test-classes/cacerts-pwd.jks"
                 trust-store-password-provider="custom"
                 trust-store-password="com.sun.grizzly.config.TestSecurePasswordProvider"
                 key-store="target/test-classes/keystore-pwd.jks"
                 key-store-password-provider="custom"
                 key-store-password="com.sun.grizzly.config.TestSecurePasswordProvider"/>
        </protocol>
        <protocol name="https" security-enabled="true">
            <http/>
            <ssl ssl3-enabled="false" cert-nickname="s1as"
                 trust-store="target/test-classes/cacerts-pwd.jks"
                 trust-store-password-provider="custom"
                 trust-store-password="com.sun.grizzly.config.TestSecurePasswordProvider"
                 key-store="target/test-classes/keystore-pwd.jks"
                 key-store-password-provider="custom"
                 key-store-password="com.sun.grizzly.config.TestSecurePasswordProvider"
                 allow-lazy-init="false"/>
        </protocol>
    </protocols>
    <network-listeners>
        <thread-pool name="defaultThreadPool"/>
        <network-listener name="http-listener" port="38082" transport="tcp" protocol="https-lazy" thread-pool="defaultThreadPool"/>
        <network-listener name="https-listener" port="38083" transport="tcp" protocol="https"
                          thread-pool="defaultThreadPool"/>
    </network-listeners>
</network-config>
