<network-config>
    <transports>
        <transport name="tcp"/>
    </transports>
    <protocols>
        <protocol name="http">
            <http enable-comet-support="true"/>
        </protocol>
    </protocols>
    <network-listeners>
        <thread-pool name="defaultThreadPool"/>
        <network-listener name="http-listener" port="38084" transport="tcp" protocol="http" thread-pool="defaultThreadPool"/>
        <network-listener name="https-listener" address="yourmachine" port="38085" transport="tcp" protocol="http" thread-pool="defaultThreadPool"/>
    </network-listeners>
</network-config>
