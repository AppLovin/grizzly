<?xml version="1.0" encoding="UTF-8"?>
<project name="Project Grizzly"
         xmlns="http://maven.apache.org/DECORATION/1.3.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">
    <bannerLeft>
        <!-- Reflow Maven Skin, but with "Reflow" highlighted -->
        <name><![CDATA[
          <img src="images/grizzlyHead.png"/>&nbsp;<span class="color-highlight">Project</span> Grizzly
          ]]>
        </name>
        <href>./</href>
    </bannerLeft>

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.0.0</version>
    </skin>

    <custom>
        <reflowSkin>
            <!-- Make this to 'false' for local development, i.e. file:// URLs -->
            <protocolRelativeURLs>false</protocolRelativeURLs>
            <brand>
                <name>
                    <![CDATA[Project <span class="color-highlight">Grizzly</span>]]>
                </name>
                <href>./</href>
            </brand>
            <slogan>NIO Event Development Simplified</slogan>
            <!-- Global skin configuration -->
            <highlightJs>true</highlightJs>
            <highlightJsTheme>github</highlightJsTheme>
            <theme>bootswatch-cosmo</theme>
            <smoothScroll>true</smoothScroll>
            <!--<absoluteResourceURL>https://grizzly.java.net</absoluteResourceURL>-->
            <skinAttribution>false</skinAttribution>
            <topNav>Download|Documentation|Contribute</topNav>
            <bottomNav maxSpan="9">
                <column>Main|Download</column>
                <column>Contribute</column>
            </bottomNav>
            <toc>sidebar</toc>
            <!-- Page Configuration -->
            <pages>
                <index project="site">
                    <sections>
                        <columns>3</columns>
                    </sections>
                    <toc>false</toc>
                    <titleTemplate>Project Grizzly</titleTemplate>
                </index>
                <contribute>
                    <sections>
                        <body/>
                        <columns>3</columns>
                    </sections>
                    <toc>false</toc>
                </contribute>
            </pages>
        </reflowSkin>
    </custom>

    <body>
        <menu name="Main" inherit="top">
            <item name="Home" href="https://grizzly.java.net"/>
            <item name="Release Notes" href="changes-report.html"/>
        </menu>
        <menu name="Download" inherit="top">
            <item name="Download" href="dependencies.html"/>
            <item name="License" href="license.html"/>
        </menu>
        <menu name="Documentation" inherit="bottom">
            <item name="Overview" href="overview.html"/>
            <item name="Dependencies" href="dependencies.html"/>
            <item name="Core Framework" href="hack">
                <item name="Memory Management"
                      href="memory.html"/>
                <item name="I/O Strategies"
                      href="iostrategies.html"/>
                <item name="Transports and Connections"
                      href="transportsconnections.html"/>
                <item name="FilterChain and Filters"
                      href="filterchainfilters.html"/>
                <item name="Core configuration"
                      href="coreconfig.html"/>
                <item name="Port Unification"
                      href="portunification.html"/>
                <item name="Monitoring" href="monitoring.html"/>
                <item name="Best Practices"
                      href="bestpractices.html"/>
                <item name="Quick Start" href="quickstart.html"/>
                <item name="Samples" href="samples.html"/>
            </item>
            <item name="HTTP Components" href="hack">
                <item name="Core HTTP Framework"
                      href="httpframework.html"/>
                <item name="HTTP Server Framework"
                      href="httpserverframework.html"/>
                <item name="HTTP Server Framework Extras"
                      href="httpserverframeworkextras.html"/>
                <item name="Comet" href="comet.html"/>
                <item name="JAXWS" href="jaxws.html"/>
                <item name="WebSockets" href="websockets.html"/>
                <item name="AJP" href="ajp.html"/>
                <item name="SPDY" href="spdy.html"/>
            </item>
        </menu>
        <menu name="Contribute" inherit="bottom">
            <item name="Contribute" href="contribute.html"/>
            <item name="Issues"
                  href="https://java.net/jira/browse/GRIZZLY/"/>
        </menu>
    </body>
</project>